<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter Login Input Page</title>
    <!-- Latest Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Remix Icon CDN -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body class="bg-black text-white h-screen flex flex-col">
    <!-- Top Navigation -->
    <div class="flex items-center justify-between px-4 py-2">
        <a href="/" class="text-white text-sm">Cancel</a>
        <i class="ri-twitter-fill text-2xl"></i>
    </div>

    <!-- Main Content -->
    <div class="flex flex-col items-start px-6 mt-12 space-y-6">
        <h1 class="text-xl font-semibold leading-tight">
            Create your account
        </h1>
        <% if(error) { %>
            <small class="text-red-500">
                <%= error %>
            </small>
            <% } %>
                <form autocomplete="off" action="/register" method="post">
                    <input name="username" type="text" placeholder="Phone, email, or username"
                        class="w-full bg-transparent border-b border-gray-500 text-white placeholder-gray-500 focus:outline-none py-2 text-lg" />
                    <input type="password" name="password" placeholder="Password"
                        class="w-full bg-transparent border-b border-gray-500 text-white placeholder-gray-500 focus:outline-none py-2 text-lg" />
                    <div class="mt-4 flex gap-4 items-center">
                        <button disabled
                            class="bg-gray-700 text-white text-sm py-2 px-6 rounded-full opacity-50 cursor-not-allowed">
                            Create account
                        </button>
                    </div>
                </form>
    </div>

    <script>
        const inputs = document.querySelectorAll('input');
        const button = document.querySelector('button');

        function checkInputs() {
            const allFilled = Array.from(inputs).every(input => input.value.trim().length > 0);
            button.disabled = !allFilled;
            button.classList.toggle('opacity-50', !allFilled);
            button.classList.toggle('cursor-not-allowed', !allFilled);
            button.classList.toggle('bg-blue-500', allFilled);
            button.classList.toggle('bg-gray-700', !allFilled);
        }

        inputs.forEach(input => {
            input.addEventListener('input', checkInputs);
        });
    </script>
</body>

</html>