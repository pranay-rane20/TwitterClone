<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Post</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 min-h-screen text-white flex justify-center items-center">

  <!-- Create Post Container -->
  <div class="w-full max-w-xl bg-gray-800 shadow-lg rounded-lg">
    <!-- Header -->
    <div class="p-4 border-b border-gray-700 flex items-center">
      <a href="/" class="text-gray-400 hover:text-white mr-4">
        <i class="ri-arrow-left-line text-2xl"></i>
      </a>
      <h1 class="text-lg font-bold">Create Post</h1>
    </div>

    <!-- Create Post Form -->
    <form action="/createpost" method="post" class="p-4 space-y-4">
      <!-- User Info -->
      <div class="flex items-start space-x-4">
        <img src="https://i.pravatar.cc/40?img=4" alt="User Avatar" class="w-12 h-12 rounded-full">
        <textarea 
          name="tweet" 
          rows="4" 
          placeholder="What's happening?" 
          class="w-full bg-gray-700 text-white placeholder-gray-400 rounded-lg p-3 resize-none focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        ></textarea>
      </div>

      <!-- Actions -->
      <div class="flex justify-between items-center">
        <!-- Icons -->
        <div class="flex items-center space-x-4 text-gray-400">
          <button type="button" class="hover:text-blue-500">
            <i class="ri-image-line text-xl"></i>
          </button>
          <button type="button" class="hover:text-blue-500">
            <i class="ri-bar-chart-horizontal-line text-xl"></i>
          </button>
          <button type="button" class="hover:text-blue-500">
            <i class="ri-emotion-happy-line text-xl"></i>
          </button>
          <button type="button" class="hover:text-blue-500">
            <i class="ri-calendar-event-line text-xl"></i>
          </button>
        </div>

        <!-- Tweet Button -->
        <button 
          type="submit" 
          class="bg-blue-500 text-white font-bold py-2 px-6 rounded-lg hover:bg-blue-600"
        >
          Tweet
        </button>
      </div>
    </form>
  </div>

</body>
</html>